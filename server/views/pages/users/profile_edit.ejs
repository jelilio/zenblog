<!-- #main -->
<main id="main">
  <section class="mb-5">
    <div class="container" data-aos="fade-up">
      <div class="row">
        <div class="col-lg-12 text-center mb-5">
          <h1 class="page-title">Edit Profile</h1>
        </div>
      </div>

      <div class="row">
        <div class="col-md-3 border-right">
          <div class="d-flex flex-column align-items-center text-center">
            <% if(user.avatar) { %>
            <img class="rounded-circle" width="150px" src="/users/<%= user.id %>/avatartn" />
            <% } else { %>
            <img
              class="rounded-circle"
              width="150px"
              src="https://st3.depositphotos.com/15648834/17930/v/600/depositphotos_179308454-stock-illustration-unknown-person-silhouette-glasses-profile.jpg"
            /><% } %> <span class="font-weight-bold"><%= user.name %></span
            ><span class="text-black-50"><%= user.email %></span><span> </span>
          </div>
        </div>
        <div class="col-md-6 border-right">
          <div class="col-lg-12">
            <% if(typeof errMessage != 'undefined') { %>
            <div class="alert alert-danger" role="alert"><%= errMessage %></div>
            <% } %>
            <form
              action="/users/profile/edit"
              method="post"
              enctype="multipart/form-data"
              class="row"
            >
              <div class="col-lg-6 mb-3">
                <input
                  type="text"
                  name="name"
                  class="form-control"
                  value="<%= formData.name %>"
                  placeholder="Enter your name"
                />
              </div>
              <div class="col-lg-6 mb-3">
                <input
                  type="email"
                  name="email"
                  class="form-control"
                  value="<%= formData.email %>"
                  placeholder="Enter your email"
                />
              </div>
              <div class="col-12 mb-3">
                <div class="input-group custom-file-button">
                  <label class="input-group-text" for="inputUploadAvatar">Upload your avatar</label>
                  <input
                    class="form-control"
                    type="file"
                    name="avatar"
                    accept="image/*"
                    id="inputUploadAvatar"
                  />
                </div>
              </div>
              <div class="col-12 mb-3">
                <textarea
                  class="form-control"
                  name="bio"
                  placeholder="Enter a short bio"
                  cols="30"
                  rows="5"
                >
<%= formData.bio %></textarea
                >
              </div>
              <div class="col-12">
                <input type="submit" class="btn btn-primary" value="Submit" />
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>
<!-- End #main -->
