<!-- Section: Design Block -->
<main id="main"></main>
<section class="">
  <!-- Jumbotron -->
  <div class="px-4 py-5 px-md-5 text-center text-lg-start">
    <div class="container">
      <div class="row gx-lg-5 align-items-center">
        <div class="col-lg-6 mb-5 mb-lg-0">
          <h1 class="my-5 display-3 fw-bold ls-tight">
            The best offer <br />
            <span class="text-primary">for your business</span>
          </h1>
          <p style="color: hsl(217, 10%, 50.8%)">
            Lorem ipsum dolor sit amet consectetur adipisicing elit. Eveniet, itaque accusantium
            odio, soluta, corrupti aliquam quibusdam tempora at cupiditate quis eum maiores libero
            veritatis? Dicta facilis sint aliquid ipsum atque?
          </p>
        </div>

        <div class="col-lg-6 mb-5 mb-lg-0">
          <div class="card">
            <div class="card-body py-5 px-md-5">
              <% if(success) { %>
              <div class="alert alert-success" role="alert">Thank you for your registration!</div>
              <% } else { %>
              <div class="login-wrap">
                <div class="img" style="background-image: url(images/bg.jpg)"></div>
                <h3 class="text-center mb-4">Sign Up</h3>
                <% if(typeof errMessage != 'undefined') { %>
                <div class="alert alert-danger" role="alert"><%= errMessage %></div>
                <% } %>
                <form action="" method="post" class="signup-form">
                  <div class="form-group mb-3">
                    <input
                      type="text"
                      class="form-control"
                      name="name"
                      value="<%= formData.name %>"
                      placeholder="John Doe"
                      required
                    />
                  </div>
                  <div class="form-group mb-3">
                    <input
                      type="text"
                      class="form-control"
                      name="email"
                      value="<%= formData.email %>"
                      placeholder="johndoe@gmail.com"
                      required
                    />
                  </div>
                  <div class="form-group mb-3">
                    <input
                      id="password-field"
                      type="password"
                      class="form-control"
                      name="password"
                      placeholder="Password"
                      required
                    />
                    <span
                      toggle="#password-field"
                      class="fa fa-fw fa-eye field-icon toggle-password"
                    ></span>
                  </div>
                  <div class="form-group">
                    <button type="submit" class="form-control btn btn-primary submit px-3">
                      Continue
                    </button>
                  </div>
                </form>
              </div>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Jumbotron -->
</section>
<!-- Section: Design Block -->
