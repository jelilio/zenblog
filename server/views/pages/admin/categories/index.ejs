<div>
  <div class="page-header pt-3">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3">
      <h2>Categories</h2>
      <div class="btn-toolbar mb-md-0">
        <div id="add_new_object" class="btn-group mr-2 ml-2 add_new_object">
          <a role="button" class="btn btn-outline-secondary" href="/admin/categories/add"
            >Add New</a
          >
        </div>
      </div>
    </div>
    <hr />
  </div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Description</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% categories.forEach(function(category, i){ %>
      <tr>
        <th scope="row"><%= i+1 %></th>
        <td><%= category.name %></td>
        <td><%= category.description %></td>
        <td>
          <a href="/admin/categories/<%= category.id %>/edit">Edit</a>
          <a href="/admin/categories/<%= category.id %>/delete">Delete</a>
        </td>
      </tr>
      <% }); %>
    </tbody>
  </table>
</div>
