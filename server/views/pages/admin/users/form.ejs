<!-- #main -->
<div>
  <div class="page-header pt-3">
    <h2><%= pageTitle %></h2>
    <hr />
  </div>
  <% if(typeof errMessage != 'undefined') { %>
  <div class="alert alert-danger" role="alert"><%= errMessage %></div>
  <% } %>
  <form action="" method="post" class="row">
    <div class="mb-3 row">
      <label for="userName" class="col-sm-2 col-form-label">Name</label>
      <div class="col-sm-10">
        <input
          type="text"
          name="name"
          id="userName"
          class="form-control"
          value="<%= formData.name %>"
          placeholder="Enter a name"
        />
      </div>
    </div>
    <div class="mb-3 row">
      <label for="userEmail" class="col-sm-2 col-form-label">Email</label>
      <div class="col-sm-10">
        <input
          id="userEmail"
          type="email"
          name="email"
          class="form-control"
          value="<%= formData.email %>"
          placeholder="Enter an email"
        />
      </div>
    </div>
    <% if( !formData._id ) { %>
    <div class="mb-3 row">
      <label for="password-field" class="col-sm-2 col-form-label">Password</label>
      <div class="col-sm-10">
        <input
          id="password-field"
          type="password"
          class="form-control"
          name="password"
          placeholder="Password"
          required
        />
        <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
      </div>
    </div>
    <% } %>
    <div class="mb-3 row">
      <label for="staticEmail" class="col-sm-2 col-form-label">Roles</label>
      <div class="row col-sm-10">
        <div class="col-2 mb-3">
          <div>
            <input class="form-check-input" name="userCheck" type="checkbox" value="USER" <%
            if(formData.userCheck == 'USER') {%> checked <% } %> id="flexCheckDefault" />
            <label class="form-check-label" for="flexCheckDefault">User</label>
          </div>
        </div>
        <div class="col-2 mb-3">
          <div>
            <input class="form-check-input" name="adminCheck" type="checkbox" value="ADMIN"
            id="flexCheckChecked" <% if( formData.adminCheck == 'ADMIN' ) { %> checked <% } %> />
            <label class="form-check-label" for="flexCheckChecked">Admin</label>
          </div>
        </div>
      </div>
    </div>
    <div class="col-12">
      <input type="submit" class="btn btn-primary" value="Submit" />
    </div>
  </form>
</div>
<!-- End #main -->
