<div>
  <div class="page-header pt-3">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3">
      <h2>Posts</h2>
      <div class="btn-toolbar mb-md-0">
        <div id="add_new_object" class="btn-group mr-2 ml-2 add_new_object">
          <a role="button" class="btn btn-outline-secondary" href="/admin/posts/add">Add New</a>
        </div>
      </div>
    </div>
    <hr />
  </div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Title</th>
        <th scope="col">Author</th>
        <th scope="col">Categories</th>
        <th scope="col">Date</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% posts.forEach(function(post, i){ %>
      <tr>
        <th scope="row"><%= i+1 %></th>
        <td><%= post.title %></td>
        <td><%= post.author.name %></td>
        <td><%= post.categories %></td>
        <td>
          <% if(post.published) { %> Published <%= post.hidden? '(Hidden)' : '' %>
          <p><%= moment(post.updatedAt).format('DD MMM YY hh:mm'); %></p>
          <% } else { %> Last Modified
          <p><%= moment(post.updatedAt).format('DD MMM YY hh:mm'); %></p>
          <% } %>
        </td>
        <td>
          <a href="/admin/posts/<%= post.slug %>/edit">Edit</a>
          <a href="/admin/posts/<%= post.slug %>/preview" target="_blank">Preview</a>
          <a href="/admin/posts/<%= post.slug %>/delete">Delete</a>
        </td>
      </tr>
      <% }); %>
    </tbody>
  </table>
</div>
