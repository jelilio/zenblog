<!-- #main -->
<div>
  <div class="page-header pt-3">
    <h2><%= pageTitle %></h2>
    <hr />
  </div>
  <% if(typeof errMessage != 'undefined') { %>
  <div class="alert alert-danger" role="alert"><%= errMessage %></div>
  <% } %>
  <form action="" method="post" enctype="multipart/form-data" class="row">
    <div class="mb-3 row">
      <label for="postTitle" class="col-sm-2 col-form-label">Title</label>
      <div class="col-sm-10">
        <input
          type="text"
          name="title"
          id="postTitle"
          class="form-control"
          value="<%= formData.title %>"
          placeholder="Enter a title"
          required
        />
      </div>
    </div>
    <div class="mb-3 row">
      <label for="postSubTitle" class="col-sm-2 col-form-label">Subtitle</label>
      <div class="col-sm-10">
        <input
          id="postSubTitle"
          type="text"
          name="subtitle"
          class="form-control"
          value="<%= formData.subtitle %>"
          placeholder="Enter a subtitle"
        />
      </div>
    </div>
    <div class="mb-3 row">
      <label for="postBody" class="col-sm-2 col-form-label">Body</label>
      <div class="col-sm-10">
        <textarea
          class="form-control"
          name="body"
          placeholder="Enter the post's body"
          cols="30"
          rows="5"
          required
        >
<%= formData.body %></textarea
        >
      </div>
    </div>
    <div class="mb-3 row">
      <label for="postFeatureImage" class="col-sm-2 col-form-label">Feature Image</label>
      <div class="col-sm-10">
        <div class="input-group custom-file-button">
          <label class="input-group-text" for="postFeatureImage">Upload an image</label>
          <input
            class="form-control"
            type="file"
            name="featureImage"
            accept="image/*"
            id="postFeatureImage"
          />
        </div>
      </div>
    </div>
    <div class="mb-3 row">
      <label for="postFeatureImageCaption" class="col-sm-2 col-form-label"
        >Feature Image Caption</label
      >
      <div class="col-sm-10">
        <input
          id="postFeatureImageCaption"
          type="text"
          name="featureImageCaption"
          class="form-control"
          value="<%= formData.featureImageCaption %>"
          placeholder="Enter feature image caption"
        />
      </div>
    </div>
    <div class="mb-3 row">
      <label for="postCategories" class="col-sm-2 col-form-label">Categories</label>
      <div class="col-sm-10">
        <select class="select" id="postCategories" name="categories" multiple>
          <% allCategries.forEach(function(category, i){ %>
          <option value="<%= category.slug %>" <% if(formData.categories.indexOf(category.slug)>
            -1 ) { %> selected <% } %> > <%= category.name %>
          </option>
          <% }) %>
        </select>
      </div>
    </div>
    <% if(formData.published) { %>
    <div class="mb-3 row">
      <div class="col-sm-10 offset-sm-2">
        <input class="form-check-input" type="checkbox" name="hide" value="true"
        id="flexCheckChecked" <%= formData.hidden? 'checked' : '' %> />
        <label class="form-check-label" for="flexCheckChecked"> Hide </label>
      </div>
    </div>
    <% } else { %>
    <div class="mb-3 row">
      <div class="col-sm-10 offset-sm-2">
        <input class="form-check-input" type="checkbox" name="publish" value="true"
        id="flexCheckChecked" <%= formData.published? 'checked' : '' %> />
        <label class="form-check-label" for="flexCheckChecked"> Publish </label>
      </div>
    </div>
    <% } %>
    <div class="col-12">
      <input type="submit" class="btn btn-primary" value="Submit" />
    </div>
  </form>
</div>
<!-- End #main -->
