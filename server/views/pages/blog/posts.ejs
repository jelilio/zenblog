<main id="main">
  <section>
    <div class="container">
      <div class="row">
        <div class="col-md-9" data-aos="fade-up">
          <h3 class="category-title">Blog</h3>
          <% posts.forEach(function(post, i){ %>
          <div class="d-md-flex post-entry-2 half">
            <a href="/posts/<%= post.slug %>" class="me-4 thumbnail">
              <img src="/posts/<%= post.slug %>/feature-image" alt="" class="img-fluid" />
            </a>
            <div>
              <div class="post-meta">
                <span class="date">
                  <% if(post.categories.length > 0) { %>
                  <a href="/blog/<%= post.categories[0] %>"><%= post.categories[0] %> </a>
                  <% } else { %> BLOG <% } %>
                </span>
                <span class="mx-1">&bullet;</span>
                <span><%= moment(post.publishedDate).format("MMM Do 'YY"); %></span>
              </div>
              <h3>
                <a href="/posts/<%= post.slug %>"><%= post.title %></a>
              </h3>
              <p><%= `${post.body.slice(0, 250)}â€¦` %></p>
              <div class="d-flex align-items-center author">
                <div class="photo">
                  <img
                    src="/users/<%= post.author.id %>/avatartn"
                    alt="author avatar"
                    class="img-fluid"
                  />
                </div>
                <div class="name">
                  <h3 class="m-0 p-0"><%= post.author.name %></h3>
                </div>
              </div>
            </div>
          </div>
          <% }); %> <% if(posts.length == 0) { %>
          <p>No posts in this category</p>
          <% } %>

